<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".RaceActivity"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/start_updates_button"
        android:onClick="startUpdatesButtonHandler"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/stop_updates_button"
        android:onClick="stopUpdatesButtonHandler"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login_button"
        android:nestedScrollingEnabled="false"
        android:onClick="loginButtonHandler"
        android:layout_below="@+id/passwordTextField"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailTextField"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="lukas@machalik.cz" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordTextField"
        android:layout_below="@+id/emailTextField"
        android:layout_centerHorizontal="true"
        android:text="test" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Race Info"
        android:id="@+id/refreshButton"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:onClick="refreshButtonHandler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-1 m"
        android:id="@+id/distanceTextView"
        android:layout_below="@+id/refreshButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-1 km/h"
        android:id="@+id/avgSpeedTextView"
        android:layout_below="@+id/distanceTextView"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walkersListView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/start_updates_button"
        android:layout_below="@+id/avgSpeedTextView"
        android:choiceMode="none" />

</RelativeLayout>
