<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/race_main_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameCS"
            android:text="Jméno závodu česky"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nameEN"
            android:text="Race name english"
            android:textSize="16sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="@string/start_colon"
                    android:textSize="16sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

                <TextView
                    android:text="@string/end_colon"
                    android:textSize="16sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp">

                <TextView android:id="@+id/startTime"
                    android:text="pondělí 22. července 24:00"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAlignment="gravity"/>

                <TextView android:id="@+id/finishTime"
                    android:text="pátek 22. září 3:00"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textAlignment="gravity"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
